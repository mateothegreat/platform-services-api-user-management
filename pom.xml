        <pluginRepository>
            <id>spring-milestones</id>
            <url>http://repo.spring.io/milestone</url>
        </pluginRepository>

    </pluginRepositories>

    <profiles>

        <profile>

            <id>dev</id>

            <properties>
                <spring.profiles.active>dev</spring.profiles.active>
            </properties>

        </profile>

        <profile>

            <id>test</id>

            <properties>
                <spring.profiles.active>test</spring.profiles.active>
            </properties>

            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

        </profile>

    </profiles>

