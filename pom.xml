        <resources>

            <resource>

                <directory>src/test/resources</directory>
                <filtering>true</filtering>

                <includes>
                    <include>**/*.properties</include>
                </includes>

                <excludes>
                    <exclude>**/*local.properties</exclude>
                </excludes>

            </resource>

            <resource>

                <directory>src/main/resources</directory>
                <filtering>true</filtering>

                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                </includes>

            </resource>

        </resources>

